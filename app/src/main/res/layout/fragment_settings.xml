<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SettingsFragment">

    <TextView
        android:id="@+id/tv_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_zip_code"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_zip" />

    <TextView
        android:id="@+id/tv_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_units"
        app:layout_constraintTop_toBottomOf="@id/et_zip" />

    <Spinner
        android:id="@+id/sp_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_units">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_fahrenheit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_celsius" />
    </Spinner>

</android.support.constraint.ConstraintLayout>